@import "./base.styl";
@import "./var.styl";
@import "./dark-theme.styl";
@import "./iconfont.styl";

body {
  color: var(--fontColor);
  .navbar {
    backdrop-filter: blur(4px);
    background-color: var(--navBgColor);
    border-bottom: none;
    box-shadow: var(--boxShadow);
    .site-name {
      color: var(--fontColor);
    }
    .nav-dropdown {
      box-shadow: var(--boxShadow);
    }
    div.links  {
      background-color: transparent;
      .nav-links a:hover,
      .nav-links a.router-link-active {
        color: var(--themeColor);
      }
    }
  }
  .sidebar {
    background-color: var(--sidebarBgColor);
    border-right-color: var(--mainColor);
    .nav-links {
      border-bottom-color: var(--lineColor);
    }
    a.sidebar-link {
      color: var(--fontColor);
      &:hover {
        color: var(--themeColor);
      }
    }
  }
  .sidebar-heading {
    color: var(--fontColor);
  }
  .dropdown-wrapper {
    .dropdown-title,
    .mobile-dropdown-title {
      color: var(--fontColor);
    }
    .nav-dropdown {
      background-color: var(--mainColor);
      border: none;
    }
  }
  .theme-default-content code {
    color: var(--themeColor);
    background-color: var(--lineColor);
  }
  div[class*="language-"],
  div[class*="language-"].line-numbers-mode::after,
  .theme-default-content pre,
  .theme-default-content pre[class*="language-"] {
    border-radius: 0;
  }
  .search-box {
    input {
      border-color: var(--lineColor);
      color: var(--fontColor);
    }
    ul.suggestions {
      border: none;
      background-color: var(--mainColor);
      .suggestion {
        background-color:  transparent;
        &:hover {
          background-color:  transparent;
          a {
            color: var(--themeColor);
          }
        }
        a {
          color: var(--fontColor);
      }
      }
      .focused {
        background-color:  transparent;
        a {
          color: var(--themeColor);
        }
      }
    }
  }
  h2 {
    border-bottom-color: var(--lineColor);
  }
  hr {
    border-top-color: var(--lineColor);
  }
  blockquote {
    border-left-color: var(--lineColor);
  }
  .page-nav .inner {
    border-top-color: var(--lineColor);
  }
}